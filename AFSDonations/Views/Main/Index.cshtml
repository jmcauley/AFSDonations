@using AFSDonations.Models
@model AFSDonations.Models.Donation
@{
    ViewBag.Title = "Index";
}

<div class="row-fluid marketing">
    <div class="span8 offset1">
        <p>
            @ViewBag.WidgetName is fundraising for an AFS Study Abroad Program to Germany. Donations made on this page are secure and go directly to @ViewBag.WidgetName's program tuition. Upon making a donation via the form below, you will receive a receipt by email. Donations are not tax deductible.
        </p>
        <p>
            Sponsor an AFSer is a tool that makes fundraising easy for students by providing a widget for their blogs that takes secure payments from contributors and deposits the donation straight into a student's AFS tuition account.
        </p>
    </div>   
</div>

<div class="row-fluid marketing">
    <div class="span8 offset1">
        <form name="donorform" id="donorform" action="@Url.Action("Index")" class="form-horizontal" method="POST">
            <input type="hidden" name="StudentWidgetId" value="@Model.StudentWidget_StudentWidgetId"/>
            <fieldset>
                <legend>Donor Info</legend>
                <div class="control-group">
                    <label class="control-label" for="DonorName">Donor Name:</label> 
                    <div class="controls">
                        <input class="span5" name="FirstName" id="FirstName" type="text" placeholder="FirstName" value="@Model.FirstName"/>
                        <input class="span5" name="LastName" id="LastName" type="text" placeholder="LastName" value="@Model.LastName"/>
                    </div>
                </div>
                <div class="control-group input-prepend">
                    <label class="control-label" for="Amount">Donation Amount:</label> 
                    <div class="controls">
                        <span class="add-on">$</span><input class="span11" name="Amount" id="Amount" type="text" placeholder="Amount" value="@Model.Amount" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="donationMessage">Message (optional):</label> 
                    <div class="controls">
                        <textarea rows="3" class="span11" id="donationMessage" name="donationMessage"></textarea>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Payment Info</legend>
                <div class="control-group">
                    <label class="control-label" for="CardName">Name on Card:</label> 
                    <div class="controls">
                        <input class="span11" name="CardName" id="CardName" type="text" placeholder="Name on Card" value=""/>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Address">Address:</label> 
                    <div class="controls">
                        <input class="span11" name="Address" id="Address" type="text" placeholder="Address" value="@Model.Address" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="City">City:</label> 
                    <div class="controls">
                        <input class="span11" name="City" id="City" type="text" placeholder="City" value="@Model.City" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="State">State:</label> 
                    <div class="controls">
                        <input class="span11" name="State" id="State" type="text" placeholder="State" value="@Model.State" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Zip">Zip:</label> 
                    <div class="controls">
                        <input class="span11" name="Zip" id="Zip" type="text" placeholder="Zip" value="@Model.Zip" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="CardNumber">Card Number:</label> 
                    <div class="controls">
                        <input class="span11" name="CardNumber" id="CardNumber" type="text" placeholder="CardNumber" value="" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="ExpDate">Expiration Date:</label> 
                    <div class="controls">
                        <input class="span8" name="ExpDate" id="ExpDate" type="text" placeholder="Expiration Date" value="" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="CVV2">CVV2:</label> 
                    <div class="controls">
                        <input class="span8" name="CVV2" id="CVV2" type="text" placeholder="CVV2" value="" />
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" id="submit" class="btn btn-primary">Donate</button>
                    <button type="button" id="cancel" class="btn">Cancel</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
