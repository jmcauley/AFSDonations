@using AFSDonations.Models
@model AFSDonations.Models.Donation
@{
    ViewBag.Title = "Index";
}

@if (@ViewBag.ErrorMsg.Length > 0)
{
  <div class="row-fluid marketing">
    <div class="span8 offset1 alert-error">
        <p class="text-center">@ViewBag.ErrorMsg</p>
    </div>
</div>
}

<div class="row-fluid marketing">
    <div class="span8 offset1">
        <p>
            @ViewBag.WidgetName is fundraising for an AFS Study Abroad Program to @Model.StudentWidget.DestinationCountry.
        </p>
        <p>
            Sponsor an AFSer is an online tool that makes fundraising easy for students by providing a widget that allows contributors the ability to make secure contributions directly to an AFS'ers program fee. 
        </p>
        <p>
            The contribution you make on this page is secure and will go straight to @ViewBag.WidgetName's AFS account. You will receive a receipt via email. Please remember that contributions made through the Sponsor an AFSer program are not tax deductible. 
        </p>
    </div>   
</div>

<div class="row-fluid marketing">
    <div class="span8 offset1">
        <form name="donorform" id="donorform" action="@Url.Action("Index")" class="form-horizontal" method="POST">
            <input type="hidden" name="StudentWidget_StudentWidgetId" value="@Model.StudentWidget_StudentWidgetId"/>
            <fieldset>
                <legend>Donor Info</legend>
                <div class="control-group">
                    <label class="control-label" for="DonorName">Donor Name:</label> 
                    <div class="controls">
                        <input class="span5" name="FirstName" id="FirstName" type="text" placeholder="FirstName" value="@Model.FirstName"/>
                        <input class="span5" name="LastName" id="LastName" type="text" placeholder="LastName" value="@Model.LastName"/>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Email">Email:</label> 
                    <div class="controls">
                        <input class="span11" name="Email" id="Email" type="text" placeholder="Email Address" value="@Model.Email"/>
                    </div>
                </div>
                <div class="control-group input-prepend">
                    <label class="control-label" for="Amount">Donation Amount:</label> 
                    <div class="controls">
                        <span class="add-on">$</span><input class="span11" name="Amount" id="Amount" type="text" placeholder="Amount" value="@Model.Amount" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="donationMessage">Message To Student (optional):</label> 
                    <div class="controls">
                        <textarea rows="3" class="span11" id="Message" name="Message">@Model.Message</textarea>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Payment Info</legend>
                <div class="control-group">
                    <label class="control-label" for="CardName">Name on Card:</label> 
                    <div class="controls">
                        <input class="span11" name="CardName" id="CardName" type="text" placeholder="Name on Card" value="@Model.CardName"/>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Address">Address:</label> 
                    <div class="controls">
                        <input class="span11" name="Address" id="Address" type="text" placeholder="Address" value="@Model.Address" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="City">City:</label> 
                    <div class="controls">
                        <input class="span11" name="City" id="City" type="text" placeholder="City" value="@Model.City" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="State">State:</label> 
                    <div class="controls">
                        <input class="span11" name="State" id="State" type="text" placeholder="State" value="@Model.State" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="Zip">Zip:</label> 
                    <div class="controls">
                        <input class="span11" name="Zip" id="Zip" type="text" placeholder="Zip" value="@Model.Zip" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="CardNumber">Card Number:</label> 
                    <div class="controls">
                        <input class="span11" name="CardNumber" id="CardNumber" type="text" placeholder="CardNumber" value="@Model.CardNumber" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="ExpDate">Exp. Month/Year:</label> 
                    <div class="controls">
                        <input class="span5" name="ExpMonth" id="ExpMonth" type="text" placeholder="Expiration Month" value="@Model.ExpMonth" />
                        <input class="span5" name="ExpYear" id="ExpYear" type="text" placeholder="Expiration Year" value="@Model.ExpYear" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="CVV2">CVV2:</label> 
                    <div class="controls">
                        <input class="span8" name="CVV2" id="CVV2" type="text" placeholder="CVV2" value="@Model.CVV2" />
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" id="submit" class="btn btn-primary">Donate</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
